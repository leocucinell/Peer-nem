<%- include("../partials/header") %>

<%- include("../partials/navbar") %>
<main class="splash-view___container">
    <!-- container for the forms choice + Buttons -->
    <div class="forms-container">

        <!-- slides for forms container -->
        <div class="form-slides">

            <div id="login-form">
                <h1>Login</h1>
                <form action="/login" method="POST">
                    <input name="username" placeholder="username" type="text">
                    <input name="password" placeholder="**********" type="password">
                    <button>Submit</button>
                </form>
            </div>

            <div id="register-form">
                <h1>Register</h1>
                <form action="/register" method="POST">
                    <input name="username" type="text" placeholder="username">
                    <input name="email" type="email" placeholder="email">
                    <input name="password" type="password" placeholder="**********">
                    
                    <!-- inputs for address number, street name, city, state -->
                    <input placeholder="address number" name="addressNum" type="number">
                    <input placeholder="street name" name="streetName" type="text">
                    <input placeholder="city" name="city" type="text">
                    <input placeholder="state: OR, CA, NV, ..." name="state" type="text">

                    <button>Submit</button>
                </form>
            </div>

        </div>

        <!-- buttons container -->
        <div class="button-container">
            <div class="anchor-wrapper">
                <a href="#login-form">login</a>
            </div>
            <div class="anchor-wrapper">
                <a href="#register-form">register</a>
            </div>
        </div>
        

    </div>
</main>

<%- include("../partials/footer") %>
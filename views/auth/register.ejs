<%- include("../partials/header") %>
<form action="/register" method="POST">
    <input name="username" type="text" placeholder="username">
    <input name="email" type="email" placeholder="email">
    <input name="password" type="password" placeholder="**********">
    
    <!-- inputs for address number, street name, city, state -->
    <input placeholder="address number" name="addressNum" type="number">
    <input placeholder="street name" name="streetName" type="text">
    <input placeholder="city" name="city" type="text">
    <input placeholder="state: OR, CA, NV, ..." name="state" type="text">

    <input type="submit" value="submit">
</form>
